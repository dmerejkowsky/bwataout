#!/usr/bin/env python3

import sys
from pathlib import Path
import shutil

shared_path = Path("~/media/phone/shared/").expanduser()


def main():
    path = Path(sys.argv[1])
    parent_path = path.parent
    to_create = shared_path / parent_path
    to_create.mkdir(exist_ok=True, parents=True)
    dest = to_create / path.name
    print(path, "->", dest)
    shutil.copy(path, to_create)


if __name__ == "__main__":
    main()

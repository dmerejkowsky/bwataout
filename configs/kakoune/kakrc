## Hide release notes from latest version
set-option global startup_info_version 20200804

## Setup plug.kak
source "%val{config}/plugins/plug.kak/rc/plug.kak"

## Connect
plug alexherbo2/prelude.kak
plug alexherbo2/terminal-mode.kak

plug alexherbo2/connect.kak %{
  define-command fzf-files -params .. -file-completion -docstring 'Open selected files with fzf' %{
    connect-terminal sh -c %{
      edit $(fd --type file . "$@" | fzf)
    } -- %arg{@}
  }

  define-command ranger -params .. -file-completion -docstring 'Start ranger' %{
    connect-terminal ranger %arg{@}
  }

  hook global RuntimeError "\d+:\d+: '\w+' (.*): is a directory" %{
    evaluate-commands %sh{
      directory=$kak_hook_param_capture_1
      echo ranger $directory
    }
  }

  map global user h ": connect-terminal <ret>"
}


## Completion
set global ignored_files "(.*\.egg-info)|(__pycache__)|(\.mypy_cache)|(build/)"

## LSP
eval %sh{kak-lsp --kakoune -s $kak_session}
# Note: call lsp-enable-window when ready
